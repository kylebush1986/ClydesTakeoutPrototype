@using ClydesTakeoutPrototype.Models.OrderModels
@model ClydesTakeoutPrototype.Models.OrderModels.Order

@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>

<div>
    <h4>Order</h4>
    <hr />
    @foreach(var item in Model.Items)
    {
        <div>
            <h5>@item.Name</h5>
            <p>@item.Price.ToString("c2")</p>
        </div>
        <hr />
    }
<h5>Total: @Model.Total.ToString("c2")</h5>
</div>

<form asp-controller="Orders" asp-action="SubmitOrder">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ID" class="form-control" data-id="@Model.ID" hidden />
    <div class="form-group">
        <label asp-for="PickupTime" class="control-label">Pickup Time</label>
        <textarea asp-for="PickupTime" class="form-control"></textarea>
    </div>
    @*<div class="form-group">
            <label asp-for="PickupTime" class="control-label"></label>
            @Html.DropDownListFor(o => o.PickupTime, new SelectList(Enum.GetValues(typeof(DrinkType))))
        </div>*@

    <div class="form-group">
        <input type="submit" value="Submit Order" class="btn btn-outline-primary" />
        <a class="btn btn-outline-danger" asp-controller="Menus" asp-action="Index">Cancel</a>
    </div>
</form>