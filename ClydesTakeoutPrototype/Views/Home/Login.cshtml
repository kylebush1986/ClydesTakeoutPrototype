@using ClydesTakeoutPrototype.Models.SystemModels

@model ClydesTakeoutPrototype.Models.SystemModels.User

@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/images/clydes.jpg);
        min-height: 100%;
        background-position: center;
        background-size: cover;
    }

    .text-center {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        color: white;
    }

    p {
        width: 50%;
        margin: 0 auto;
        padding-bottom: 20px;
    }

    #startOrder {
        background-color: cornflowerblue;
        color: white;
        border: none;
        padding: 10px 30px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 12px;
    }

    #login {
        background-color: white;
        width: 50%;
    }

</style>

<div id="login" class="container">
    <form class="form-check" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="container col-md-10">
            <h1>Login</h1>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input class="form-control" placeholder="Enter Email" asp-for="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input class="form-control" placeholder="Enter Password" asp-for="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success" value="Login" type="submit">
                <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Index">Cancel</a>
                <a class="btn btn-outline-info" asp-controller="Home" asp-action="SignUp">Sign Up</a>
            </div>
        </div>
        
    </form>
</div>