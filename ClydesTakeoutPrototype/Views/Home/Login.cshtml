@using ClydesTakeoutPrototype.Models.SystemModels

@model ClydesTakeoutPrototype.Models.SystemModels.User

@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/images/clydes.jpg);
        min-height: 100%;
        background-position: center;
        background-size: cover;
    }

    #login {
        background-color: white;
        width: 50%;
        padding: 15px;
        margin-top: 100px;
    }

</style>

<div id="login" class="container">
    <form class="form-check" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="container col-md-10">
            <h1>Login</h1>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input class="form-control" placeholder="Enter Email" asp-for="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input class="form-control" placeholder="Enter Password" asp-for="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4 center">
                    <input class="btn btn-outline-info" value="Login" type="submit">
                </div>
                <div class="col-md-4">
                    <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
                <div class="col-md-4">
                    <a class="btn btn-outline-info" asp-controller="Home" asp-action="SignUp">Sign Up</a>
                </div>
            </div>
        </div>
    </form>
</div>