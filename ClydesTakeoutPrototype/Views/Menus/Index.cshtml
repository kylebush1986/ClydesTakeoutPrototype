@using ClydesTakeoutPrototype.Models.MenuModels
@using ClydesTakeoutPrototype.Models.OrderModels
@model ClydesTakeoutPrototype.Models.MenuModels.Menu

@{
}

<h1>Menu</h1>
<hr />
<h2>Entrees</h2>
<hr />
@foreach (var item in Model.Items)
{
    if (item.GetType() == typeof(Entree))
    {
        <div class="row py-2">
            <div class="col-3">
                <img class="img-fluid" src="~/images/menu_items/@item.ImageURL" />
            </div>
            <div class="col-9">
                <h3>@item.Name</h3> @*item name*@
                <p>@item.Description</p>
                <p>Price: $@item.Price</p>
                <a class="btn btn-outline-primary" asp-controller="Menus" asp-action="MenuItem" asp-route-id="@item.ID">View Item</a>
            </div>
        </div>
    }
}

<hr />
<h2>Sides</h2>
<hr />
@foreach (var item in Model.Items)
{
    if (item.GetType() == typeof(Side))
    {
        <div class="row py-2">
            <div class="col-3">
                <img class="img-fluid" src="~/images/menu_items/@item.ImageURL" />
            </div>
            <div class="col-9">
                <h3>@item.Name</h3> @*item name*@
                <p>@item.Description</p>
                <p>Price: $@item.Price</p>
                <a class="btn btn-outline-primary" asp-controller="Menus" asp-action="MenuItem" asp-route-id="@item.ID">View Item</a>
            </div>
        </div>
    }
}

<hr />
<h2>Drinks</h2>
<hr />
@foreach (var item in Model.Items)
{
    if (item.GetType() == typeof(Drink))
    {
        <div class="row">
            <div class="col-9">
                <h5>@item.Name</h5> @*item name*@
                <p>@item.Description</p>
                <p>Price: $@item.Price</p>
                <a class="btn btn-outline-primary" asp-controller="Menus" asp-action="MenuItem" asp-route-id="@item.ID">Add to Order</a>
            </div>
        </div>
    }
}